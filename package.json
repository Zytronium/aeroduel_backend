{
  "name": "aeroduel_server",
  "version": "0.2.0",
  "main": "electron/main.js",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "e-build": "next build; npx electron-builder",
    "dev-build": "cross-env DEV=true electron .",
    "start": "next start",
    "lint": "eslint"
  },
  "dependencies": {
    "bonjour-service": "^1.3.0",
    "next": "16.0.3",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/ws": "^8.18.1",
    "babel-plugin-react-compiler": "1.0.0",
    "baseline-browser-mapping": "^2.8.32",
    "electron": "^39.2.1",
    "electron-builder": "^26.0.12",
    "eslint": "^9",
    "eslint-config-next": "16.0.3",
    "tailwindcss": "^4",
    "typescript": "^5",
    "cross-env": "^7.0.3"
  },
  "build": {
    "appId": "com.aeroduel.server",
    "files": [
      "electron/**/*",
      "package.json",
      "public/**/*"
    ],
    "extraResources": [
      {
        "from": ".next/standalone",
        "to": "standalone",
        "filter": [
          "**/*",
          "!node_modules/**"
        ]
      },
      {
        "from": ".next/standalone/node_modules",
        "to": "standalone/node_modules",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": ".next/static",
        "to": "standalone/.next/static",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "public",
        "to": "standalone/public",
        "filter": [
          "**/*"
        ]
      }
    ],
    "mac": {
      "target": "dmg",
      "icon": "public/logo.png"
    },
    "win": {
      "target": "nsis",
      "icon": "public/logo.png"
    },
    "linux": {
      "target": "AppImage",
      "icon": "public/logo.png"
    }
  }
}
